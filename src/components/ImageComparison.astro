---
// src/components/ImageComparison.astro
import type { ImageMetadata } from "astro";

interface Props {
    beforeImage: ImageMetadata;
    afterImage: ImageMetadata;
    beforeLabel?: string;
    afterLabel?: string;
    width?: string;
    height?: string;
}

const {
    beforeImage,
    afterImage,
    beforeLabel = "Before",
    afterLabel = "After",
    width = "100%",
    height = "auto",
} = Astro.props;
---

<!-- Wrapper div with responsive class -->
<div class="comparison-wrapper">
    <img-comparison-slider>
        <figure slot="first" class="before">
            <img src={beforeImage.src} alt={beforeLabel} />
            <figcaption>
                {beforeLabel}
            </figcaption>
        </figure>
        <figure slot="second" class="after">
            <img src={afterImage.src} alt={afterLabel} />
            <figcaption>
                {afterLabel}
            </figcaption>
        </figure>
    </img-comparison-slider>
</div>

<script>
    import "img-comparison-slider";
</script>

<style>
    /* Wrapper styling for responsive layout */
    .comparison-wrapper {
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
    }

    /* Style the comparison slider to maintain aspect ratio */
    img-comparison-slider {
        display: block;
        width: 100%;
        aspect-ratio: 1 / 1;
        max-width: 512px; /* Default max-width for larger screens */
        margin: 0 auto;
    }

    /* Figure and caption styling */
    .before,
    .after {
        margin: 0;
    }

    .before img,
    .after img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .before figcaption,
    .after figcaption {
        background: #fff;
        border: 1px solid #c0c0c0;
        border-radius: 12px;
        color: #2e3452;
        opacity: 0.8;
        padding: 5px;
        position: absolute;
        top: 5%;
        line-height: 100%;
        font-size: 0.875rem; /* Slightly smaller text on mobile */
    }

    .before figcaption {
        left: 12px;
    }

    .after figcaption {
        right: 12px;
    }

    /* Media query for mobile devices */
    @media (max-width: 768px) {
        img-comparison-slider {
            max-width: 100%; /* Allow full width on mobile */
            aspect-ratio: 1 / 1; /* Maintain square aspect ratio */
        }

        /* When inside a Figure component that contains multiple comparisons */
        :global(figure) {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        /* Adjust caption size for better mobile readability */
        .before figcaption,
        .after figcaption {
            font-size: 0.75rem;
            padding: 4px 8px;
        }
    }

    /* Media query for larger screens */
    @media (min-width: 769px) {
        :global(figure) {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1rem;
            align-items: start;
        }
    }
</style>
